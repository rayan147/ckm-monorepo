{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main.js",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "src/early-access/templates/**/*",
        "outDir": "dist/early-access/templates"
      }
    ],
    "watchAssets": true
  }
}
